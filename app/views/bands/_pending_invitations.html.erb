<div id="pending_invitations_list" class="pending-invitations-section">
  <div class="pending-header">
    <i class="fa-solid fa-clock"></i>
    <span>Pending Invitations (<%= pending_invitations&.count || 0 %>)</span>
  </div>

  <% if pending_invitations.present? && pending_invitations.any? %>
    <div class="pending-list">
      <% pending_invitations.each do |invitation| %>
        <div class="pending-item">
          <div class="pending-avatar">
            <i class="fa-solid fa-user"></i>
          </div>
          <div class="pending-info">
            <span class="pending-name"><%= invitation.musician&.name || "Unknown" %></span>
            <span class="pending-instrument"><%= invitation.musician&.instrument %></span>
          </div>
          <div class="pending-actions">
            <%= button_to band_band_invitation_path(invitation.band, invitation),
                method: :delete,
                class: "btn-cancel-invite",
                data: { turbo_confirm: "Cancel invitation to #{invitation.musician&.name}?" } do %>
              <i class="fa-solid fa-xmark"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="pending-empty">
      <i class="fa-solid fa-paper-plane"></i>
      <p>No pending invitations</p>
    </div>
  <% end %>
</div>
