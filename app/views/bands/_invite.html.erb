<%= form_with model: [band, invitation], id: "new_band_invitation" do |f| %>
  <% if invitation.errors.any? %>
    <div class="errors">
      <%= pluralize(invitation.errors.count, "error") %> prevented this invitation:
      <ul>
        <% invitation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :musician_id, "Select Musician" %>
    <%= f.collection_select :musician_id, Musician.all, :id, :name, { prompt: "Choose a musician..." } %>
  </div>

  <%= f.submit "Invite" %>
<% end %>
