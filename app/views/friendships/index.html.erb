<div class="friendships-page">
    <h1 class="friendships-title">
      <i class="fa-solid fa-user-group"></i> Friends
    </h1>

    <%# Pending Friend Requests %>
    <% if @pending_requests.any? %>
      <div class="friendships-card">
        <h2 class="friendships-card-title">
          <i class="fa-solid fa-inbox pink"></i>
          Friend Requests (<%= @pending_requests.count %>)
        </h2>
        <div class="friendships-list">
          <% @pending_requests.each do |request| %>
            <div class="friendship-item">
              <div class="friendship-avatar">
                <% if request.requester.musician&.avatar&.attached? %>
                  <%= image_tag request.requester.musician.avatar %>
                <% else %>
                  <span><%= request.requester.email[0].upcase %></span>
                <% end %>
              </div>
              <div class="friendship-info">
                <p class="friendship-name">
                  <%= request.requester.musician&.name || request.requester.email.split('@').first %>
                </p>
                <p class="friendship-meta">
                  <%= time_ago_in_words(request.created_at) %> ago
                </p>
              </div>
              <div class="friendship-actions">
                <%= button_to accept_friendship_path(request), method: :patch, class: "btn-friend-accept" do %>
                  <i class="fa-solid fa-check"></i> Accept
                <% end %>
                <%= button_to decline_friendship_path(request), method: :patch, class: "btn-friend-decline" do %>
                  <i class="fa-solid fa-xmark"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# Sent Requests %>
    <% if @sent_requests.any? %>
      <div class="friendships-card">
        <h2 class="friendships-card-title">
          <i class="fa-solid fa-paper-plane gray"></i>
          Sent Requests (<%= @sent_requests.count %>)
        </h2>
        <div class="friendships-list">
          <% @sent_requests.each do |request| %>
            <div class="friendship-item">
              <div class="friendship-avatar">
                <% if request.addressee.musician&.avatar&.attached? %>
                  <%= image_tag request.addressee.musician.avatar %>
                <% else %>
                  <span><%= request.addressee.email[0].upcase %></span>
                <% end %>
              </div>
              <div class="friendship-info">
                <p class="friendship-name">
                  <%= request.addressee.musician&.name || request.addressee.email.split('@').first %>
                </p>
                <p class="friendship-pending">Pending</p>
              </div>
              <%= button_to friendship_path(request), method: :delete, class: "btn-friend-cancel" do %>
                Cancel
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# Friends List %>
    <div class="friendships-card">
      <h2 class="friendships-card-title">
        <i class="fa-solid fa-users lime"></i>
        Your Friends (<%= @friends.count %>)
      </h2>
      <% if @friends.any? %>
        <div class="friendships-grid">
          <% @friends.each do |friend| %>
            <div class="friendship-item">
              <div class="friendship-avatar">
                <% if friend.musician&.avatar&.attached? %>
                  <%= image_tag friend.musician.avatar %>
                <% else %>
                  <span><%= friend.email[0].upcase %></span>
                <% end %>
              </div>
              <div class="friendship-info">
                <p class="friendship-name">
                  <%= friend.musician&.name || friend.email.split('@').first %>
                </p>
                <% if friend.musician %>
                  <%= link_to musician_path(friend.musician), class: "friendship-profile-link" do %>
                    View profile
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="friendships-empty">
          <i class="fa-solid fa-user-group"></i>
          <p>No friends yet</p>
          <p class="sub">Find musicians and send them friend requests!</p>
        </div>
      <% end %>
    </div>
  </div>
