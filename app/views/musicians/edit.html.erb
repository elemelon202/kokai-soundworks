<% if @band_invitation.present? %>
  <p>
    You have been invited to join <strong><%= @band_invitation.band.name %></strong>!<br>

    <%= link_to "Accept",
      accept_band_invitation_path(@band_invitation.token),
      class: "btn btn-success" %>

    <%= link_to "Decline",
      decline_band_invitation_path(@band_invitation.token),
      class: "btn btn-danger" %>
  </p>
<% else %>
  <p>No pending band invitations.</p>
<% end %>
<div class="container mt-3">
  <h1>Edit musician</h1>
  <%= simple_form_for @musician do |f| %>
    <%= f.input :name %>
    <%= f.input :instrument %>
    <%= f.input :age %>
    <%= f.input :styles %>
    <%= f.input :location %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
  <%= link_to "Back to list", musician_path(@musician) %>
</div>
