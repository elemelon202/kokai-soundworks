<div id="message_form">
  <%= form_with model: [chat, message], class: "message-form", data: { turbo: true, controller: "message-form" } do |f| %>
    <% if message.errors.any? %>
      <div class="errors">
        <%= message.errors.full_messages.to_sentence %>
      </div>
    <% end %>

    <div class="message-input-group">
      <%= f.text_area :content,
          placeholder: "Type your message... (Enter to send)",
          rows: 1,
          class: "message-input",
          required: true,
          data: { message_form_target: "input", action: "keydown->message-form#submitOnEnter" } %>
      <%= f.submit "Send", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
