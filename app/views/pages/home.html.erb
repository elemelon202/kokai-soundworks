<div class="container" data-controller="parallax" data-action="scroll@window->parallax#handleScroll">
  <div class="gradient">
    <%# Enhanced Hero Section %>
    <div class="hero-section">

      <%# Animated background elements %>
      <div class="hero-bg-elements">
        <div class="floating-note note-1">
          <i class="fa-solid fa-music icon-lime"></i>
        </div>
        <div class="floating-note note-2">
          <i class="fa-solid fa-guitar icon-pink"></i>
        </div>
        <div class="floating-note note-3">
          <i class="fa-solid fa-drum icon-gold"></i>
        </div>
        <div class="floating-note note-4">
          <i class="fa-solid fa-microphone icon-lime-sm"></i>
        </div>
        <div class="floating-note note-5">
          <i class="fa-solid fa-headphones icon-pink-sm"></i>
        </div>
      </div>

      <%# Main hero content %>
      <div class="hero-content" data-parallax-target="bannerText">

        <%# Animated logo/brand %>
        <div class="hero-brand">
          <span><%= t('home.welcome') %></span>
        </div>

        <%# Main title with Impact font %>
        <div class="hero-title-container">
          <div class="hero-title">KOKAI</div>
          <div class="hero-title">SOUNDWORKS</div>
        </div>

        <%# Tagline %>
        <p class="hero-tagline">
          <%= t('home.tagline') %>
        </p>

        <%# Subtext with animated typing effect look %>
        <div class="hero-tagline-row">
          <div class="tagline-item">
            <i class="fa-solid fa-users icon-lime"></i>
            <span><%= t('home.build_bands') %></span>
          </div>
          <div class="tagline-item">
            <i class="fa-solid fa-calendar-check icon-pink"></i>
            <span><%= t('home.book_gigs') %></span>
          </div>
          <div class="tagline-item">
            <i class="fa-solid fa-location-dot icon-gold"></i>
            <span><%= t('home.fill_venues') %></span>
          </div>
        </div>

        <%# CTA Buttons %>
        <div class="hero-cta-row">
          <%= link_to new_user_registration_path, class: "hero-btn-primary" do %>
            <i class="fa-solid fa-rocket"></i> <%= t('home.get_started') %>
          <% end %>
          <%= link_to musicians_path, class: "hero-btn-secondary" do %>
            <i class="fa-solid fa-compass"></i> <%= t('home.explore') %>
          <% end %>
        </div>

        <%# Stats/Social proof %>
        <div class="hero-stats-row">
          <div class="stat-item">
            <div class="stat-value lime"><%= Musician.count %>+</div>
            <div class="stat-label"><%= t('home.musicians.title') %></div>
          </div>
          <div class="stat-item">
            <div class="stat-value pink"><%= Band.count %>+</div>
            <div class="stat-label"><%= t('navbar.bands') %></div>
          </div>
          <div class="stat-item">
            <div class="stat-value gold"><%= Venue.count %>+</div>
            <div class="stat-label"><%= t('navbar.venues') %></div>
          </div>
        </div>
      </div>

      <%# Scroll indicator %>
      <div class="hero-scroll-indicator">
        <i class="fa-solid fa-chevron-down"></i>
      </div>
    </div>

    <%# MAINSTAGE Spotlight %>
    <%= render "mainstage/homepage_spotlight" %>

    <div class="hero-cards justify-content-center m-4">
      <h2><%= t('home.join_community') %></h2>
      <div class="row justify-content-center">
        <%# Musician Card %>
        <div class="col-10 col-md-3 card-col">
          <div class="signup-card">
            <div class="signup-card-icon lime">
              <i class="fa-solid fa-guitar"></i>
            </div>
            <h3><%= t('home.musicians.title') %></h3>
            <p><%= t('home.musicians.description') %></p>
            <ul>
              <li><i class="fa-solid fa-check lime"></i> <%= t('home.musicians.feature1') %></li>
              <li><i class="fa-solid fa-check lime"></i> <%= t('home.musicians.feature2') %></li>
              <li><i class="fa-solid fa-check lime"></i> <%= t('home.musicians.feature3') %></li>
            </ul>
            <%= link_to new_user_registration_path, class: "btn signup-card-btn lime" do %>
              <i class="fa-solid fa-user-plus me-2"></i> <%= t('common.sign_up_free') %>
            <% end %>
          </div>
        </div>

        <%# Bandleader Card %>
        <div class="col-10 col-md-3 card-col">
          <div class="signup-card">
            <div class="signup-card-icon pink">
              <i class="fa-solid fa-users"></i>
            </div>
            <h3><%= t('home.bandleaders.title') %></h3>
            <p><%= t('home.bandleaders.description') %></p>
            <ul>
              <li><i class="fa-solid fa-check pink"></i> <%= t('home.bandleaders.feature1') %></li>
              <li><i class="fa-solid fa-check pink"></i> <%= t('home.bandleaders.feature2') %></li>
              <li><i class="fa-solid fa-check pink"></i> <%= t('home.bandleaders.feature3') %></li>
            </ul>
            <%= link_to new_user_registration_path, class: "btn signup-card-btn pink" do %>
              <i class="fa-solid fa-user-plus me-2"></i> <%= t('common.sign_up_free') %>
            <% end %>
          </div>
        </div>

        <%# Venue Owner Card %>
        <div class="col-10 col-md-3 card-col">
          <div class="signup-card">
            <div class="signup-card-icon gold">
              <i class="fa-solid fa-location-dot"></i>
            </div>
            <h3><%= t('home.venue_owners.title') %></h3>
            <p><%= t('home.venue_owners.description') %></p>
            <ul>
              <li><i class="fa-solid fa-check gold"></i> <%= t('home.venue_owners.feature1') %></li>
              <li><i class="fa-solid fa-check gold"></i> <%= t('home.venue_owners.feature2') %></li>
              <li><i class="fa-solid fa-check gold"></i> <%= t('home.venue_owners.feature3') %></li>
            </ul>
            <%= link_to new_user_registration_path, class: "btn signup-card-btn gold" do %>
              <i class="fa-solid fa-user-plus me-2"></i> <%= t('common.sign_up_free') %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="carousels text-center m-4">
      <div class="musicians-carousel row justify-content-center">
        <div class="musicians-carousel-heading text-center">
          <h2><%= t('home.new_faces') %></h2>
        </div>
        <% @new_musicians = Musician.last(3) %>
        <div class="row justify-content-center align-items-stretch">
          <% if @new_musicians.any? %>
            <% @new_musicians.each do |musician| %>
              <div class="col-8 col-md-3 m-2">
                <div class="musician-card position-relative">
                  <%= link_to musician_path(musician), class: "text-light text-decoration-none stretched-link", data: { turbo: false } do %>
                    <div class="musician-card-header">
                      <% if musician.media.attached? %>
                        <% first_file = musician.media.first %>
                        <% if first_file.content_type.start_with?("image") %>
                          <%= cl_image_tag(first_file.key, class: "musician-avatar") %>
                        <% end %>
                      <% else %>
                        <%= image_tag "musician_placeholder.jpg", class: "musician-avatar" %>
                      <% end %>
                      <div class="musician-card-name-wrapper">
                        <h4 class="musician-card-name"><%= musician.name %></h4>
                      </div>
                    </div>
                    <div class="musician-card-details">
                      <p><i class="fa-solid fa-location-dot"></i> <%= musician.location %></p>
                      <p><i class="fa-solid fa-guitar"></i> <%= musician.instrument %></p>
                      <p><i class="fa-solid fa-music"></i> <%= musician.styles %></p>
                      <p><i class="fa-solid fa-pen-to-square"></i> <%= musician.bio %></p>
                    </div>
                  <% end %>
                  <%= button_to t('common.message'), create_or_show_direct_messages_path(recipient_id: musician.user_id), method: :post, class: "btn btn-primary message-btn-lime", data: { turbo: false } %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="venues-carousel row justify-content-center">
        <div class="venues-carousel-heading text-center">
          <h2><%= t('home.new_places') %></h2>
          <% @new_venues = Venue.last(3) %>
          <div class="row justify-content-center align-items-stretch">
            <% if @new_venues.any? %>
              <% @new_venues.each do |venue| %>
                <div class="col-8 col-md-3 m-2">
                  <div class="musician-card position-relative">
                    <%= link_to venue_path(venue), class: "text-light text-decoration-none stretched-link", data: { turbo: false } do %>
                      <div class="musician-card-header">
                        <div class="musician-card-name-wrapper">
                          <h4 class="musician-card-name"><%= venue.name %></h4>
                        </div>
                      </div>
                      <div class="musician-card-details">
                        <p><i class="fa-solid fa-location-dot"></i> <%= venue.address %></p>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
