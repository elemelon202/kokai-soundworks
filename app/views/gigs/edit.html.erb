<div class="musician-dashboard-container">
  <div class="musician-dashboard-header">
    <h1>Manage Gig</h1>
    <h2><%= @gig.name %></h2>
    <%= link_to gig_path(@gig), class: "btn-view-profile" do %>
      <i class="fa-solid fa-eye"></i> View Gig
    <% end %>
  </div>

  <div id="flash_messages">
    <%= render partial: "shared/flash", locals: { notice: flash[:notice], alert: flash[:alert] } if defined?(flash) %>
  </div>

  <%# Stats Grid - Revenue & Attendance Projections %>
  <div class="musician-stats-grid">
    <div class="musician-stat-card">
      <div class="stat-icon">
        <i class="fa-solid fa-calendar"></i>
      </div>
      <div class="stat-value"><%= @gig.date.strftime("%b %d") %></div>
      <div class="stat-label">Date</div>
    </div>

    <div class="musician-stat-card">
      <div class="stat-icon">
        <i class="fa-solid fa-users"></i>
      </div>
      <div class="stat-value"><%= @gig.bands.count %></div>
      <div class="stat-label">Booked Bands</div>
    </div>

    <div class="musician-stat-card">
      <div class="stat-icon">
        <i class="fa-solid fa-chart-line"></i>
      </div>
      <div class="stat-value"><%= @gig.projected_attendance %></div>
      <div class="stat-label">Projected Attendance</div>
    </div>

    <div class="musician-stat-card">
      <div class="stat-icon">
        <i class="fa-solid fa-dollar-sign"></i>
      </div>
      <div class="stat-value">
        <% if @gig.ticket_price.present? && @gig.ticket_price > 0 %>
          $<%= number_with_delimiter(@gig.projected_revenue.to_i) %>
        <% else %>
          â€”
        <% end %>
      </div>
      <div class="stat-label">Projected Revenue</div>
    </div>
  </div>

  <%# RSVP Stats %>
  <div class="musician-stats-grid">
    <div class="musician-stat-card">
      <div class="stat-icon stat-icon-going">
        <i class="fa-solid fa-check"></i>
      </div>
      <div class="stat-value"><%= @gig.gig_attendances.going.count %></div>
      <div class="stat-label">Going</div>
    </div>

    <div class="musician-stat-card">
      <div class="stat-icon stat-icon-interested">
        <i class="fa-solid fa-star"></i>
      </div>
      <div class="stat-value"><%= @gig.gig_attendances.interested.count %></div>
      <div class="stat-label">Interested</div>
    </div>

    <div class="musician-stat-card">
      <div class="stat-icon stat-icon-pending">
        <i class="fa-solid fa-clipboard-list"></i>
      </div>
      <div class="stat-value"><%= @gig.gig_applications.pending.count %></div>
      <div class="stat-label">Pending Apps</div>
    </div>

    <div class="musician-stat-card">
      <div class="stat-icon stat-icon-ticket">
        <i class="fa-solid fa-ticket"></i>
      </div>
      <div class="stat-value">
        <% if @gig.ticket_price.present? && @gig.ticket_price > 0 %>
          $<%= @gig.ticket_price.to_i %>
        <% else %>
          Free
        <% end %>
      </div>
      <div class="stat-label">Ticket Price</div>
    </div>
  </div>

  <%# Main Content Grid %>
  <div class="dashboard-feed-analytics-row">
    <%# Book a Band - Left %>
    <div class="musician-dashboard-card">
      <div class="musician-card-header">
        <div class="card-icon">
          <i class="fa-solid fa-plus"></i>
        </div>
        <h3>Book a Band</h3>
      </div>
      <div class="dashboard-card-padding">
        <%= simple_form_for [@gig, @booking], html: { class: "booking-form" } do |f| %>
          <div class="booking-select-wrapper">
            <%= f.association :band, collection: Band.all, prompt: "Select a band", label: false,
                input_html: { class: "form-input venue-form-input" } %>
          </div>
          <%= f.submit "Invite Band", class: "btn-save-profile" %>
        <% end %>
      </div>

      <%# Current Bookings %>
      <% if @gig.bookings.any? %>
        <div class="booked-bands-section">
          <h4 class="booked-bands-title">
            <i class="fa-solid fa-list-check"></i> Booked Bands
          </h4>
          <div class="booked-bands-list">
            <% @gig.bookings.each do |booking| %>
              <div class="booked-band-item">
                <%= link_to band_path(booking.band), class: "band-link" do %>
                  <% if booking.band.images.attached? %>
                    <%= cl_image_tag booking.band.images.first.key, class: "band-avatar" %>
                  <% else %>
                    <div class="band-avatar-placeholder">
                      <i class="fa-solid fa-users"></i>
                    </div>
                  <% end %>
                  <%= booking.band.name %>
                <% end %>
                <%= link_to gig_booking_path(@gig, booking),
                    data: { turbo_method: :delete, turbo_confirm: "Remove #{booking.band.name} from this gig?" },
                    class: "btn-remove-band" do %>
                  <i class="fa-solid fa-xmark"></i>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <%# Pending Applications - Right %>
    <div class="musician-dashboard-card">
      <div class="musician-card-header">
        <div class="card-icon">
          <i class="fa-solid fa-inbox"></i>
        </div>
        <h3>Pending Applications</h3>
      </div>
      <div class="dashboard-card-padding">
        <% pending_apps = @gig.gig_applications.pending.includes(:band) %>
        <% if pending_apps.any? %>
          <div class="pending-apps-list">
            <% pending_apps.each do |app| %>
              <div class="app-card-with-message">
                <div class="app-card-content">
                  <div class="app-card-info">
                    <%= link_to band_path(app.band), class: "app-band-link" do %>
                      <%= app.band.name %>
                    <% end %>
                    <% if app.message.present? %>
                      <p class="app-message">"<%= truncate(app.message, length: 60) %>"</p>
                    <% end %>
                  </div>
                  <div class="pending-app-actions">
                    <%= button_to approve_gig_application_path(app), method: :patch, class: "btn-app-approve" do %>
                      <i class="fa-solid fa-check"></i>
                    <% end %>
                    <%= button_to reject_gig_application_path(app), method: :patch, class: "btn-app-reject" do %>
                      <i class="fa-solid fa-xmark"></i>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="empty-state">
            <i class="fa-solid fa-inbox"></i>
            <p>No pending applications</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%# Projected Attendance by Band %>
  <% attendance_by_band = @gig.projected_attendance_by_band %>
  <% if attendance_by_band.any? %>
    <div class="musician-dashboard-card">
      <div class="musician-card-header">
        <div class="card-icon">
          <i class="fa-solid fa-chart-bar"></i>
        </div>
        <h3>Projected Attendance by Band</h3>
      </div>
      <div class="dashboard-card-padding">
        <div class="gigs-list">
          <% attendance_by_band.each do |data| %>
            <div class="attendance-band-card">
              <div class="attendance-band-header">
                <%= link_to band_path(data[:band]), class: "band-name-link" do %>
                  <%= data[:band].name %>
                <% end %>
                <span class="projected-count"><%= data[:projected] %> projected</span>
              </div>
              <div class="attendance-bar-wrapper">
                <div class="attendance-bar">
                  <% max_followers = attendance_by_band.map { |d| d[:followers] }.max %>
                  <% width_percent = max_followers > 0 ? (data[:followers].to_f / max_followers * 100) : 0 %>
                  <div class="attendance-bar-fill" style="width: <%= width_percent %>%;"></div>
                </div>
                <span class="follower-count"><%= data[:followers] %> followers</span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <%# Edit Gig Details %>
  <div class="musician-dashboard-card">
    <div class="musician-card-header">
      <div class="card-icon">
        <i class="fa-solid fa-pen"></i>
      </div>
      <h3>Edit Gig Details</h3>
    </div>

    <%= simple_form_for @gig, html: { class: "musician-edit-form" } do |f| %>
      <% if @gig.errors.any? %>
        <div class="error-box">
          <ul>
            <% @gig.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-grid">
        <div class="form-field">
          <label class="form-label">
            <i class="fa-solid fa-signature"></i> Gig Name
          </label>
          <%= f.text_field :name, class: "form-input", placeholder: "Gig name" %>
        </div>

        <div class="form-field">
          <label class="form-label">
            <i class="fa-solid fa-ticket"></i> Ticket Price
          </label>
          <%= f.number_field :ticket_price, class: "form-input", placeholder: "0.00", step: "0.01", min: "0" %>
        </div>

        <div class="form-field">
          <label class="form-label">
            <i class="fa-solid fa-calendar"></i> Date
          </label>
          <%= f.date_field :date, class: "form-input venue-form-input" %>
        </div>

        <div class="form-field">
          <label class="form-label">
            <i class="fa-solid fa-clock"></i> Start Time
          </label>
          <%= f.time_field :start_time, class: "form-input venue-form-input" %>
        </div>

        <div class="form-field">
          <label class="form-label">
            <i class="fa-solid fa-clock"></i> End Time
          </label>
          <%= f.time_field :end_time, class: "form-input venue-form-input" %>
        </div>
      </div>

      <%# Poster Upload %>
      <div class="media-upload-section">
        <div class="media-section-header">
          <i class="fa-solid fa-image"></i>
          <div>
            <h4>Gig Poster</h4>
            <p>Upload a poster for this gig</p>
          </div>
        </div>

        <div class="upload-fields-grid">
          <div class="upload-field" data-controller="file-preview">
            <label class="upload-field-label">Poster Image</label>
            <div class="upload-input-wrapper">
              <%= f.file_field :poster, accept: "image/*", class: "media-file-input", id: "gig-poster-input",
                  data: { file_preview_target: "input", action: "change->file-preview#preview" } %>
              <label for="gig-poster-input" class="upload-label compact" data-file-preview-target="placeholder">
                <i class="fa-solid fa-image"></i>
                <span><%= @gig.poster.attached? ? "Change poster" : "Choose poster" %></span>
              </label>
            </div>
            <div class="file-preview-container" data-file-preview-target="preview"></div>
          </div>
        </div>
      </div>

      <%# Current Poster %>
      <% if @gig.poster.attached? %>
        <div class="gig-current-poster">
          <h4>Current Poster</h4>
          <div class="poster-wrapper">
            <%= cl_image_tag @gig.poster.key %>
          </div>
        </div>
      <% end %>

      <div class="form-submit-wrapper">
        <%= f.submit "Save Changes", class: "btn-save-profile" %>
        <%= link_to gig_path(@gig), class: "btn-cancel" do %>
          Cancel
        <% end %>
      </div>
    <% end %>
  </div>

  <%# Back to Venue Dashboard %>
  <div class="back-link">
    <%= link_to edit_venue_path(@gig.venue) do %>
      <i class="fa-solid fa-arrow-left"></i> Back to Venue Dashboard
    <% end %>
  </div>
</div>
