<div class="container">
  <div class="index-heading m-3 mt-5">
    <h1 style="font-family: Impact, 'Arial Black', Haettenschweiler, sans-serif; font-size: clamp(3rem, 10vw, 6rem); font-weight: 900; letter-spacing: 2px; text-transform: uppercase; color: #000; text-shadow: 0 0 40px rgba(251, 191, 36, 0.5), 0 0 80px rgba(251, 191, 36, 0.3); margin-bottom: 8px;">Venues</h1>
    <p>Find places to play</p>
  </div>
  <div id="venues">
    <% @venues.each do |venue| %>
      <p>
        <%= link_to "#{venue.name}", venue_path(venue) %>
        <% if venue.photos.attached? %>
          <%= cl_image_tag(venue.photos.first.key) %>
        <% else %>
          <%= image_tag "venue_placeholder.jpg", class: "w-25" %>
        <% end %>
        <li><%= "Address: #{venue.address}" %></li>
        <li><%= "City: #{venue.city}" %></li>
        <li><%= "Capacity: #{venue.capacity}" %></li>
        <li><%= "Description: #{venue.description}" %></li>
      </p>
    <% end %>
  </div>
  <%= link_to "New venue", new_venue_path %>
</div>
