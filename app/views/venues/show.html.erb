<div class="venue-show-container">
  <%# Banner %>
  <div class="venue-banner">
    <% if @venue.banner.attached? %>
      <%= cl_image_tag(@venue.banner.key, class: "venue-banner-img", style: "object-position: center #{@venue.banner_position || 50}%;") %>
    <% elsif @venue.photos.attached? %>
      <%= cl_image_tag(@venue.photos.first.key, class: "venue-banner-img") %>
    <% else %>
      <%= image_tag "venue_placeholder.jpg", class: "venue-banner-img" %>
    <% end %>
    <div class="venue-banner-overlay">
      <h1><%= @venue.name %></h1>
      <p>
        <i class="fa-solid fa-location-dot"></i>
        <%= @venue.address %><% if @venue.city.present? %>, <%= @venue.city %><% end %>
      </p>
    </div>
    <% if current_user && @venue.user_id == current_user.id %>
      <div class="venue-banner-edit">
        <%= link_to edit_venue_path(@venue), class: "btn-venue-edit" do %>
          <i class="fa-solid fa-pen"></i> <%= t('venues.show.edit') %>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# Photo Carousel %>
  <% if @venue.photos.attached? && @venue.photos.count > 0 %>
    <div class="venue-section">
      <h2 class="venue-section-title">
        <i class="fa-solid fa-images"></i> <%= t('venues.show.photos') %>
      </h2>
      <div id="venuePhotosCarousel" class="carousel slide venue-photos-carousel" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% @venue.photos.each_with_index do |photo, index| %>
            <div class="carousel-item <%= 'active' if index == 0 %>">
              <%= cl_image_tag(photo.key) %>
            </div>
          <% end %>
        </div>
        <% if @venue.photos.count > 1 %>
          <button class="carousel-control-prev" type="button" data-bs-target="#venuePhotosCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#venuePhotosCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
          <div class="carousel-indicators venue-carousel-indicators">
            <% @venue.photos.each_with_index do |photo, index| %>
              <button type="button" data-bs-target="#venuePhotosCarousel" data-bs-slide-to="<%= index %>" class="<%= 'active' if index == 0 %>"></button>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Venue Info %>
  <div class="venue-section">
    <div class="venue-info-grid">
      <% if @venue.capacity.present? %>
        <div class="venue-info-item">
          <p class="info-label"><%= t('venues.show.capacity') %></p>
          <p class="info-value">
            <i class="fa-solid fa-users"></i>
            <%= @venue.capacity %>
          </p>
        </div>
      <% end %>
      <% if @venue.gigs.any? %>
        <div class="venue-info-item">
          <p class="info-label"><%= t('venues.show.total_gigs') %></p>
          <p class="info-value">
            <i class="fa-solid fa-calendar-check"></i>
            <%= @venue.gigs.count %>
          </p>
        </div>
      <% end %>
    </div>
    <% if @venue.description.present? %>
      <div class="venue-description">
        <p><%= @venue.description %></p>
      </div>
    <% end %>
  </div>

  <%# Upcoming Gigs %>
  <% upcoming_gigs = @venue.gigs.where('date >= ?', Date.current).order(:date) %>
  <% if upcoming_gigs.any? %>
    <div class="venue-section">
      <h2 class="venue-section-title venue-section-title-lg">
        <i class="fa-solid fa-calendar"></i> <%= t('venues.show.upcoming_gigs') %>
      </h2>
      <div class="venue-gigs-list">
        <% upcoming_gigs.each do |gig| %>
          <div class="venue-gig-card">
            <div class="venue-gig-content">
              <div class="venue-gig-info">
                <h3>
                  <%= link_to gig.name, gig_path(gig) %>
                </h3>
                <p class="gig-time">
                  <i class="fa-solid fa-clock"></i>
                  <%= gig.date.strftime("%A, %B %d, %Y") %>
                  <% if gig.start_time.present? %>
                    at <%= gig.start_time.strftime("%l:%M %p") %>
                  <% end %>
                </p>
                <% if gig.bands.any? %>
                  <p class="gig-bands-line">
                    <i class="fa-solid fa-users"></i>
                    <% gig.bands.each_with_index do |band, index| %>
                      <%= link_to band.name, band_path(band) %><%= ", " unless index == gig.bands.count - 1 %>
                    <% end %>
                  </p>
                <% end %>
                <% if gig.ticket_price.present? && gig.ticket_price > 0 %>
                  <p class="gig-price">
                    <i class="fa-solid fa-ticket"></i>
                    $<%= number_with_precision(gig.ticket_price, precision: 2) %>
                  </p>
                <% end %>
              </div>
              <%= render "gig_attendances/buttons", gig: gig %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Past Gigs %>
  <% past_gigs = @venue.gigs.where('date < ?', Date.current).order(date: :desc).limit(5) %>
  <% if past_gigs.any? %>
    <div class="venue-section">
      <h2 class="venue-section-title muted venue-section-title-lg">
        <i class="fa-solid fa-clock-rotate-left"></i> <%= t('venues.show.past_gigs') %>
      </h2>
      <div class="venue-past-gigs-list">
        <% past_gigs.each do |gig| %>
          <div class="venue-past-gig">
            <div>
              <h4>
                <%= link_to gig.name, gig_path(gig) %>
              </h4>
              <p class="past-gig-meta">
                <%= gig.date.strftime("%b %d, %Y") %>
                <% if gig.bands.any? %>
                  &bull; <%= gig.bands.map(&:name).join(", ") %>
                <% end %>
              </p>
            </div>
            <span class="past-gig-attendance">
              <i class="fa-solid fa-users"></i> <%= gig.gig_attendances.attended.count %> <%= t('venues.show.attended') %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Gig Calendar %>
  <div class="venue-section venue-calendar-section">
    <h2 class="venue-section-title venue-section-title-lg">
      <i class="fa-solid fa-calendar-days"></i> <%= t('venues.show.gig_calendar') %>
    </h2>
    <%
      calendar_events = @venue.gigs.map do |gig|
        {
          title: gig.name,
          start: gig.date.to_s,
          url: gig_path(gig),
          extendedProps: {
            genre: gig.genre,
            startTime: gig.start_time&.strftime("%l:%M %p"),
            bands: gig.bands.map(&:name).join(", ")
          }
        }
      end
    %>
    <div class="venue-calendar"
         data-controller="calendar"
         data-calendar-events-value="<%= calendar_events.to_json %>">
    </div>
  </div>

  <div class="venue-back-link">
    <%= link_to venues_path do %>
      <i class="fa-solid fa-arrow-left"></i> <%= t('venues.show.back_to_venues') %>
    <% end %>
  </div>
</div>
