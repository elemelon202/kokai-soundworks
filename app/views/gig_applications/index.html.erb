<div class="gig-applications-page">
  <h1 class="gig-applications-title">
    <i class="fa-solid fa-clipboard-list"></i> Gig Applications
  </h1>

  <%# Pending Applications %>
  <div class="gig-applications-section">
    <h2 class="gig-applications-section-title pending">
      <i class="fa-solid fa-clock"></i> Pending (<%= @pending.count %>)
    </h2>
    <% if @pending.any? %>
      <div class="gig-applications-list">
        <% @pending.each do |application| %>
          <div class="gig-application-card">
            <div class="gig-application-content">
              <div class="gig-application-details">
                <h3 class="gig-application-band">
                  <%= link_to application.band.name, band_path(application.band) %>
                </h3>
                <p class="gig-application-info">
                  <i class="fa-solid fa-calendar"></i>
                  <%= application.gig.name %> &bull; <%= application.gig.date.strftime("%b %d, %Y") %>
                </p>
                <p class="gig-application-info">
                  <i class="fa-solid fa-location-dot"></i>
                  <%= application.gig.venue.name %>
                </p>
                <% if application.message.present? %>
                  <p class="gig-application-message">
                    "<%= application.message %>"
                  </p>
                <% end %>
              </div>
              <div class="gig-application-actions">
                <%= button_to approve_gig_application_path(application), method: :patch, class: "btn-approve" do %>
                  <i class="fa-solid fa-check"></i> Approve
                <% end %>
                <%= button_to reject_gig_application_path(application), method: :patch, class: "btn-reject" do %>
                  <i class="fa-solid fa-xmark"></i> Reject
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="gig-applications-empty">No pending applications.</p>
    <% end %>
  </div>

  <%# Processed Applications %>
  <% if @processed.any? %>
    <div class="gig-applications-section">
      <h2 class="gig-applications-section-title processed">
        <i class="fa-solid fa-clock-rotate-left"></i> Recent Decisions
      </h2>
      <div class="processed-applications-list">
        <% @processed.each do |application| %>
          <div class="processed-application-row">
            <div class="processed-application-info">
              <span class="band-name"><%= application.band.name %></span>
              <span class="gig-name"> &bull; <%= application.gig.name %></span>
            </div>
            <span class="application-status-badge <%= application.approved? ? 'approved' : 'rejected' %>">
              <%= application.status.titleize %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%= link_to venues_path, class: "gig-applications-back" do %>
    <i class="fa-solid fa-arrow-left"></i> Back to venues
  <% end %>
</div>
