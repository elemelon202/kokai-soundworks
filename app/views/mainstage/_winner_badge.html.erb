<%# MAINSTAGE winner badge - displays next to musician name %>
<% win_count = musician.mainstage_win_count %>
<%= link_to mainstage_winners_path, class: "mainstage-badge", style: "display: inline-flex; align-items: center; gap: 6px; padding: 4px 10px; background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%); border-radius: 20px; text-decoration: none; margin-left: 8px; vertical-align: middle;", title: "MAINSTAGE Winner - <%= win_count %> <%= 'win'.pluralize(win_count) %>" do %>
  <i class="fa-solid fa-trophy" style="color: #fff; font-size: 0.75rem;"></i>
  <span style="color: #fff; font-size: 0.75rem; font-weight: 600;">
    MAINSTAGE
    <% if win_count > 1 %>
      <span style="opacity: 0.9;">x<%= win_count %></span>
    <% end %>
  </span>
<% end %>
