<div id="comments-section-<%= short.id %>" style="width: 100%;">
  <%# Update comment count in header %>
  <script>
    (function() {
      var countEl = document.getElementById('comment-count-<%= short.id %>');
      if (countEl) countEl.textContent = '<%= short.short_comments.count %>';
    })();
  </script>

  <%# Comment form %>
  <% if user_signed_in? %>
    <%= form_with model: [short, ShortComment.new], url: discover_short_short_comments_path(short), style: "display: flex; flex-direction: column; gap: 8px; margin-bottom: 16px;" do |f| %>
      <%= f.text_area :body, placeholder: "Add a comment...", rows: 2, style: "width: 100%; padding: 10px 14px; background: #2a2a2a; border: none; border-radius: 12px; color: #fff; font-size: 0.9rem; outline: none; resize: none;", autocomplete: "off" %>
      <%= f.submit "Post", style: "align-self: flex-end; padding: 8px 20px; background: #E936AD; color: #fff; border: none; border-radius: 8px; font-size: 0.85rem; font-weight: 500; cursor: pointer;" %>
    <% end %>
  <% else %>
    <%= link_to new_user_session_path, style: "display: block; padding: 12px 14px; background: #2a2a2a; border-radius: 12px; color: #888; text-decoration: none; font-size: 0.9rem; margin-bottom: 16px; text-align: center;" do %>
      Sign in to comment
    <% end %>
  <% end %>

  <%# Comments list %>
  <div style="display: flex; flex-direction: column; gap: 12px;">
    <% if short.short_comments.any? %>
      <% short.short_comments.limit(20).each do |comment| %>
        <div style="display: flex; gap: 10px; padding: 10px; background: #2a2a2a; border-radius: 12px;">
          <div style="width: 36px; height: 36px; border-radius: 50%; background: #444; display: flex; align-items: center; justify-content: center; flex-shrink: 0; overflow: hidden;">
            <% if comment.user.musician&.avatar&.attached? %>
              <%= cl_image_tag(comment.user.musician.avatar.key, style: "width: 100%; height: 100%; object-fit: cover;") %>
            <% else %>
              <span style="color: #888; font-size: 0.8rem; font-weight: 600;"><%= comment.user.email[0].upcase %></span>
            <% end %>
          </div>
          <div style="flex: 1; min-width: 0;">
            <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 4px;">
              <span style="color: #fff; font-size: 0.85rem; font-weight: 600;">
                <%= comment.user.musician&.name || comment.user.email.split('@').first %>
              </span>
              <span style="color: #666; font-size: 0.7rem;"><%= time_ago_in_words(comment.created_at) %></span>
            </div>
            <p style="color: #ddd; font-size: 0.9rem; margin: 0; word-wrap: break-word; line-height: 1.4;"><%= comment.body %></p>
          </div>
          <% if user_signed_in? && comment.user == current_user %>
            <%= button_to discover_short_short_comment_path(short, comment), method: :delete, style: "background: none; border: none; color: #666; cursor: pointer; padding: 4px; align-self: flex-start;" do %>
              <i class="fa-solid fa-trash" style="font-size: 0.75rem;"></i>
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div style="text-align: center; padding: 40px 20px;">
        <i class="fa-regular fa-comment" style="font-size: 2rem; color: #444; margin-bottom: 12px; display: block;"></i>
        <p style="color: #666; font-size: 0.9rem; margin: 0;">No comments yet</p>
        <p style="color: #555; font-size: 0.8rem; margin: 4px 0 0 0;">Be the first to comment!</p>
      </div>
    <% end %>
  </div>
</div>
