<div style="max-width: 500px; margin: 0 auto; padding: 24px;">
  <h1 style="font-size: 1.5rem; font-weight: 700; color: #fff; margin: 0 0 24px 0;">
    <i class="fa-solid fa-edit" style="color: #E936AD; margin-right: 8px;"></i>Edit Short
  </h1>

  <%= render "form", short: @short, musician: @musician %>

  <% if @short.video.attached? %>
    <div style="margin-top: 24px; padding: 16px; background: #1e1e1e; border-radius: 12px;">
      <h3 style="color: #fff; font-size: 0.9rem; margin: 0 0 12px 0;">Current Video</h3>
      <div style="aspect-ratio: 9/16; max-width: 200px; border-radius: 8px; overflow: hidden;">
        <%= video_tag url_for(@short.video), controls: true, loop: true, style: "width: 100%; height: 100%; object-fit: cover;" %>
      </div>
    </div>
  <% end %>
</div>
