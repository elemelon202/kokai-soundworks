<div id="like-button-<%= short.id %>" style="display: flex; flex-direction: column; align-items: center; gap: 2px;">
  <% if user_signed_in? %>
    <% if current_user.liked_shorts.include?(short) %>
      <%= button_to unlike_discover_short_path(short), method: :delete, style: "width: 44px; height: 44px; border-radius: 50%; background: rgba(0,0,0,0.5); border: none; display: flex; align-items: center; justify-content: center; cursor: pointer; transition: all 0.2s;", data: { turbo_frame: "_top" } do %>
        <i class="fa-solid fa-heart" style="color: #E936AD; font-size: 1.2rem;"></i>
      <% end %>
    <% else %>
      <%= button_to like_discover_short_path(short), method: :post, style: "width: 44px; height: 44px; border-radius: 50%; background: rgba(0,0,0,0.5); border: none; display: flex; align-items: center; justify-content: center; cursor: pointer; transition: all 0.2s;", data: { turbo_frame: "_top" } do %>
        <i class="fa-regular fa-heart" style="color: #fff; font-size: 1.2rem;"></i>
      <% end %>
    <% end %>
  <% else %>
    <%= link_to new_user_session_path, style: "width: 44px; height: 44px; border-radius: 50%; background: rgba(0,0,0,0.5); border: none; display: flex; align-items: center; justify-content: center; cursor: pointer; transition: all 0.2s; text-decoration: none;" do %>
      <i class="fa-regular fa-heart" style="color: #fff; font-size: 1.2rem;"></i>
    <% end %>
  <% end %>
  <span style="color: #fff; font-size: 0.75rem; font-weight: 600; text-shadow: 0 1px 2px rgba(0,0,0,0.5);"><%= short.short_likes.count %></span>
</div>
