<div class="container py-4">
  <%= link_to challenges_path, class: "btn btn-outline-secondary mb-4" do %>
    <i class="fa-solid fa-arrow-left me-1"></i> Back to Challenges
  <% end %>

  <div class="row">
    <%# Left: Original Challenge %>
    <div class="col-lg-5 mb-4">
      <div class="card" style="background: #1e1e1e; border: 1px solid #2a2a2a; border-radius: 16px; overflow: hidden;">
        <div class="card-header" style="background: linear-gradient(135deg, #E936AD 0%, #7B2D8E 100%); border: none; padding: 16px;">
          <div class="d-flex justify-content-between align-items-center">
            <span class="badge" style="background: rgba(255,255,255,0.2); color: #fff;">ORIGINAL</span>
            <% case @challenge.status %>
            <% when 'open' %>
              <span class="badge" style="background: #C8E938; color: #000;">Open for Responses</span>
            <% when 'voting' %>
              <span class="badge" style="background: #fff; color: #E936AD;">Voting Open</span>
            <% when 'closed' %>
              <span class="badge" style="background: #666; color: #fff;">Closed</span>
            <% end %>
          </div>
        </div>

        <%# Video %>
        <div style="position: relative; aspect-ratio: 9/16; max-height: 500px; background: #000;">
          <% if @challenge.original_short.video.attached? %>
            <video controls loop playsinline style="width: 100%; height: 100%; object-fit: contain;">
              <source src="<%= url_for(@challenge.original_short.video) %>" type="<%= @challenge.original_short.video.content_type %>">
            </video>
          <% end %>
        </div>

        <div class="card-body">
          <h2 style="color: #fff; font-size: 1.3rem; margin-bottom: 8px;"><%= @challenge.title %></h2>
          <% if @challenge.description.present? %>
            <p style="color: #aaa; font-size: 0.9rem; margin-bottom: 16px;"><%= @challenge.description %></p>
          <% end %>

          <%# Creator info %>
          <div class="d-flex align-items-center mb-3">
            <%= link_to musician_path(@challenge.creator), class: "d-flex align-items-center text-decoration-none" do %>
              <% if @challenge.creator.avatar.attached? %>
                <%= cl_image_tag(@challenge.creator.avatar.key, style: "width: 40px; height: 40px; border-radius: 50%; object-fit: cover; margin-right: 12px;") %>
              <% else %>
                <div style="width: 40px; height: 40px; border-radius: 50%; background: #2a2a2a; display: flex; align-items: center; justify-content: center; margin-right: 12px;">
                  <span style="color: #fff; font-weight: 600;"><%= @challenge.creator.name[0].upcase %></span>
                </div>
              <% end %>
              <div>
                <span style="color: #fff; font-weight: 500;"><%= @challenge.creator.name %></span>
                <p style="color: #888; font-size: 0.8rem; margin: 0;"><%= @challenge.creator.instrument %></p>
              </div>
            <% end %>
          </div>

          <%# Stats %>
          <div class="d-flex gap-4 mb-3" style="color: #888; font-size: 0.9rem;">
            <span><i class="fa-solid fa-users me-1"></i> <%= @challenge.responses_count %> responses</span>
            <span><i class="fa-solid fa-calendar me-1"></i> <%= time_ago_in_words(@challenge.created_at) %> ago</span>
          </div>

          <%# Creator actions %>
          <% if current_user.musician == @challenge.creator %>
            <div class="mt-3 pt-3" style="border-top: 1px solid #2a2a2a;">
              <p style="color: #888; font-size: 0.8rem; margin-bottom: 12px;">Creator Actions:</p>
              <div class="d-flex gap-2 flex-wrap">
                <% if @challenge.open? %>
                  <%= button_to start_voting_challenge_path(@challenge), method: :post, class: "btn btn-sm", style: "background: #E936AD; color: #fff;" do %>
                    <i class="fa-solid fa-check-to-slot me-1"></i> Start Voting
                  <% end %>
                <% end %>
                <% if @challenge.open? || @challenge.voting? %>
                  <%= button_to close_challenge_path(@challenge), method: :post, class: "btn btn-sm btn-outline-secondary", data: { confirm: "Close challenge and pick winner based on votes?" } do %>
                    <i class="fa-solid fa-flag-checkered me-1"></i> Close & Pick Winner
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <%# Respond CTA %>
      <% if @challenge.open? && current_user.musician && current_user.musician != @challenge.creator %>
        <% if @challenge.responded_by?(current_user.musician) %>
          <div class="alert mt-3" style="background: #2a2a2a; border: 1px solid #C8E938; color: #C8E938;">
            <i class="fa-solid fa-check-circle me-2"></i> You've responded to this challenge!
          </div>
        <% else %>
          <%= link_to respond_challenge_path(@challenge), class: "btn btn-lg w-100 mt-3", style: "background: #C8E938; color: #000; font-weight: 600;" do %>
            <i class="fa-solid fa-guitar me-2"></i> Submit Your Response
          <% end %>
        <% end %>
      <% end %>
    </div>

    <%# Right: Responses %>
    <div class="col-lg-7">
      <% if @challenge.winner && @challenge.closed? %>
        <div class="mb-4 p-4" style="background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%); border-radius: 16px;">
          <h4 style="color: #000; margin-bottom: 16px;">
            <i class="fa-solid fa-trophy me-2"></i> Winner
          </h4>
          <%= render 'response_card', response: @challenge.winner, winner: true %>
        </div>
      <% end %>

      <h4 class="mb-3" style="color: #fff;">
        <i class="fa-solid fa-users me-2" style="color: #E936AD;"></i>
        Responses (<%= @challenge.responses_count %>)
      </h4>

      <% if @responses.any? %>
        <div class="row g-3">
          <% @responses.reject { |r| r == @challenge.winner }.each do |response| %>
            <div class="col-md-6">
              <%= render 'response_card', response: response, winner: false %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5" style="background: #1e1e1e; border-radius: 16px;">
          <i class="fa-solid fa-video" style="font-size: 3rem; color: rgba(255,255,255,0.15);"></i>
          <h5 class="mt-3" style="color: #fff;">No responses yet</h5>
          <p class="text-muted">Be the first to respond!</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
