<div class="container py-4">
  <%= link_to challenges_path, class: "btn btn-outline-secondary mb-4" do %>
    <i class="fa-solid fa-arrow-left me-1"></i> <%= t('common.back') %> to <%= t('challenges.index.title') %>
  <% end %>

  <div class="row">
    <%# Left: Original Challenge %>
    <div class="col-lg-5 mb-4">
      <div class="challenge-card">
        <div class="challenge-card-header d-flex justify-content-between align-items-center">
          <span class="challenge-badge badge-original">ORIGINAL</span>
          <% case @challenge.status %>
          <% when 'open' %>
            <span class="challenge-badge badge-open"><%= t('challenges.index.open_for_responses') %></span>
          <% when 'voting' %>
            <span class="challenge-badge badge-voting"><%= t('challenges.show.voting') %></span>
          <% when 'closed' %>
            <span class="challenge-badge badge-closed">Closed</span>
          <% end %>
        </div>

        <%# Video %>
        <div class="challenge-video-container">
          <% if @challenge.original_short.video.attached? %>
            <video controls loop playsinline>
              <source src="<%= url_for(@challenge.original_short.video) %>" type="<%= @challenge.original_short.video.content_type %>">
            </video>
          <% end %>
        </div>

        <div class="card-body">
          <h2 class="challenge-title"><%= @challenge.title %></h2>
          <% if @challenge.description.present? %>
            <p class="challenge-description"><%= @challenge.description %></p>
          <% end %>

          <%# Creator info %>
          <div class="d-flex align-items-center mb-3">
            <%= link_to musician_path(@challenge.creator), class: "challenge-creator" do %>
              <% if @challenge.creator.avatar.attached? %>
                <div class="challenge-creator-avatar">
                  <%= cl_image_tag(@challenge.creator.avatar.key) %>
                </div>
              <% else %>
                <div class="challenge-creator-avatar placeholder">
                  <span><%= @challenge.creator.name[0].upcase %></span>
                </div>
              <% end %>
              <div>
                <span class="challenge-creator-name"><%= @challenge.creator.name %></span>
                <p class="challenge-creator-instrument"><%= @challenge.creator.instrument %></p>
              </div>
            <% end %>
          </div>

          <%# Stats %>
          <div class="d-flex gap-4 mb-3 challenge-stats">
            <span><i class="fa-solid fa-users me-1"></i> <%= @challenge.responses_count %> <%= t('challenges.show.responses').downcase %></span>
            <span><i class="fa-solid fa-calendar me-1"></i> <%= time_ago_in_words(@challenge.created_at) %> ago</span>
          </div>

          <%# Creator actions %>
          <% if current_user.musician == @challenge.creator %>
            <div class="challenge-creator-actions">
              <p class="challenge-creator-actions-label">Creator Actions:</p>
              <div class="d-flex gap-2 flex-wrap">
                <% if @challenge.open? %>
                  <%= button_to start_voting_challenge_path(@challenge), method: :post, class: "btn btn-sm btn-start-voting" do %>
                    <i class="fa-solid fa-check-to-slot me-1"></i> Start Voting
                  <% end %>
                <% end %>
                <% if @challenge.open? || @challenge.voting? %>
                  <%= button_to close_challenge_path(@challenge), method: :post, class: "btn btn-sm btn-outline-secondary", data: { confirm: "Close challenge and pick winner based on votes?" } do %>
                    <i class="fa-solid fa-flag-checkered me-1"></i> Close & Pick Winner
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <%# Respond CTA %>
      <% if @challenge.open? && current_user.musician && current_user.musician != @challenge.creator %>
        <% if @challenge.responded_by?(current_user.musician) %>
          <div class="challenge-responded-alert">
            <i class="fa-solid fa-check-circle me-2"></i> You've responded to this challenge!
          </div>
        <% else %>
          <%= link_to respond_challenge_path(@challenge), class: "btn btn-lg w-100 mt-3 btn-respond" do %>
            <i class="fa-solid fa-guitar me-2"></i> <%= t('challenges.show.submit_response') %>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <%# Right: Responses %>
    <div class="col-lg-7">
      <% if @challenge.winner && @challenge.closed? %>
        <div class="challenge-winner-section">
          <h4 class="challenge-winner-title">
            <i class="fa-solid fa-trophy me-2"></i> <%= t('challenges.show.winner') %>
          </h4>
          <%= render 'response_card', response: @challenge.winner, winner: true %>
        </div>
      <% end %>

      <h4 class="mb-3 challenge-responses-title">
        <i class="fa-solid fa-users me-2"></i>
        <%= t('challenges.show.responses') %> (<%= @challenge.responses_count %>)
      </h4>

      <% if @responses.any? %>
        <div class="row g-3">
          <% @responses.reject { |r| r == @challenge.winner }.each do |response| %>
            <div class="col-md-6">
              <%= render 'response_card', response: response, winner: false %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="challenge-empty-state">
          <i class="fa-solid fa-video"></i>
          <h5>No responses yet</h5>
          <p class="text-muted">Be the first to respond!</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
