<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="mb-1" style="color: #fff;"><%= t('challenges.index.title') %></h1>
      <p class="text-muted mb-0"><%= t('challenges.index.subtitle') %></p>
    </div>
    <% if current_user.musician %>
      <%= link_to new_challenge_path, class: "btn btn-primary" do %>
        <i class="fa-solid fa-plus me-1"></i> <%= t('challenges.index.create') %>
      <% end %>
    <% end %>
  </div>

  <% if @voting_challenges.any? %>
    <div class="mb-5">
      <h4 class="mb-3" style="color: #E936AD;">
        <i class="fa-solid fa-fire me-2"></i><%= t('challenges.index.vote_now') %>
      </h4>
      <div class="row g-3">
        <% @voting_challenges.each do |challenge| %>
          <%= render 'challenge_card', challenge: challenge %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @open_challenges.any? %>
    <div class="mb-5">
      <h4 class="mb-3" style="color: #C8E938;">
        <i class="fa-solid fa-door-open me-2"></i><%= t('challenges.index.open_for_responses') %>
      </h4>
      <div class="row g-3">
        <% @open_challenges.each do |challenge| %>
          <%= render 'challenge_card', challenge: challenge %>
        <% end %>
      </div>
    </div>
  <% end %>

  <h4 class="mb-3" style="color: #fff;"><%= t('challenges.index.all_challenges') %></h4>
  <div class="row g-3">
    <% @challenges.each do |challenge| %>
      <%= render 'challenge_card', challenge: challenge %>
    <% end %>
  </div>

  <% if @challenges.empty? %>
    <div class="text-center py-5">
      <i class="fa-solid fa-trophy" style="font-size: 4rem; color: rgba(255,255,255,0.15);"></i>
      <h3 class="mt-3" style="color: #fff;"><%= t('challenges.index.no_challenges') %></h3>
      <p class="text-muted"><%= t('challenges.index.be_first') %></p>
      <% if current_user.musician %>
        <%= link_to new_challenge_path, class: "btn btn-primary mt-2" do %>
          <i class="fa-solid fa-plus me-1"></i> <%= t('challenges.index.create') %>
        <% end %>
      <% end %>
    </div>
  <% end %>

  </div>
