<div class="cool-form-container">
  <div class="cool-form-card">
    <div class="cool-form-header">
      <div class="cool-form-icon">
        <i class="fa-solid fa-user-plus"></i>
      </div>
      <h1><%= t('signup.title') %></h1>
      <p><%= t('signup.subtitle') %></p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="cool-form-section">
        <div class="cool-form-section-header">
          <div class="section-icon">
            <i class="fa-solid fa-user"></i>
          </div>
          <div class="section-text">
            <h2><%= t('signup.account_details.title') %></h2>
            <p><%= t('signup.account_details.subtitle') %></p>
          </div>
        </div>

        <%= f.input :username,
                    required: true,
                    autofocus: true,
                    label: t('signup.username'),
                    placeholder: t('signup.username_placeholder'),
                    input_html: { autocomplete: "username", class: "form-control" } %>
        <%= f.input :email,
                    required: true,
                    label: t('signup.email'),
                    placeholder: t('signup.email_placeholder'),
                    input_html: { autocomplete: "email", class: "form-control" } %>
        <%= f.input :password,
                    required: true,
                    label: t('signup.password'),
                    placeholder: t('signup.password_placeholder'),
                    hint: (@minimum_password_length ? t('signup.password_hint', min_length: @minimum_password_length) : nil),
                    input_html: { autocomplete: "new-password", class: "form-control" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    label: t('signup.password_confirmation'),
                    placeholder: t('signup.password_confirmation_placeholder'),
                    input_html: { autocomplete: "new-password", class: "form-control" } %>
      </div>

      <div class="cool-form-section">
        <div class="cool-form-section-header">
          <div class="section-icon">
            <i class="fa-solid fa-music"></i>
          </div>
          <div class="section-text">
            <h2><%= t('signup.your_role.title') %></h2>
            <p><%= t('signup.your_role.subtitle') %></p>
          </div>
        </div>

        <%= f.input :user_type,
                    as: :select,
                    required: true,
                    collection: [
                      [t('signup.user_types.musician'), 'musician'],
                      [t('signup.user_types.band_leader'), 'band_leader'],
                      [t('signup.user_types.venue'), 'venue'],
                      [t('signup.user_types.fan'), 'fan']
                    ],
                    label: t('signup.user_type_label'),
                    prompt: t('signup.user_type_prompt'),
                    input_html: { class: 'form-control form-select' } %>
      </div>

      <div class="cool-form-submit">
        <%= f.button :submit, t('signup.submit'), class: "btn-submit" %>
      </div>
    <% end %>

    <div class="cool-form-back">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
