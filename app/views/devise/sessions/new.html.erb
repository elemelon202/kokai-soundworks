<div class="cool-form-container">
  <div class="cool-form-card">
    <div class="cool-form-header">
      <div class="cool-form-icon">
        <i class="fa-solid fa-right-to-bracket"></i>
      </div>
      <h1>Welcome Back</h1>
      <p>Sign in to continue your musical journey</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="cool-form-section">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: "Email",
                    placeholder: "Enter your email",
                    input_html: { autocomplete: "email", class: "form-control" } %>
        <%= f.input :password,
                    required: false,
                    label: "Password",
                    placeholder: "Enter your password",
                    input_html: { autocomplete: "current-password", class: "form-control" } %>
        <% if devise_mapping.rememberable? %>
          <div class="form-check mt-3">
            <%= f.input :remember_me, as: :boolean, wrapper: false, label: "Remember me" %>
          </div>
        <% end %>
      </div>

      <div class="cool-form-submit">
        <%= f.button :submit, "Log in", class: "btn-submit" %>
      </div>
    <% end %>

    <div class="cool-form-back">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
